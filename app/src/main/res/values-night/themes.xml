<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TelegramThemer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/primary_300</item>
        <item name="colorOnPrimary">?attr/colorSurface</item>
        <item name="colorPrimaryContainer">@color/primary_500</item>
        <item name="colorOnPrimaryContainer">@color/primary_300</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorOnSecondary">?attr/colorSurface</item>
        <item name="colorSecondaryContainer">@color/secondary_500</item>
        <item name="colorOnSecondaryContainer">@color/secondary_200</item>

        <!-- Tertiary -->
        <item name="colorTertiary">@color/tertiary_300</item>
        <item name="colorOnTertiary">?attr/colorSurface</item>
        <item name="colorTertiaryContainer">@color/tertiary_500</item>
        <item name="colorOnTertiaryContainer">@color/tertiary_300</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Font. -->
        <item name="fontFamily">@font/overpass_regular</item>
    </style>

    <!-- Body bold title -->
    <style name="Body.title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/overpass_bold</item>
    </style>

    <!-- AppBar titles -->
    <style name="AppBar.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/overpass_medium</item>
    </style>
    <style name="AppBar.Title.Large" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/overpass_medium</item>
    </style>

    <!-- Radio button style -->
    <style name="Widget.App.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/button_tint</item>
    </style>

    <!-- Checkbox button style -->
    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/button_tint</item>
    </style>
</resources>