<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.therxmv.telegramthemer.ui.v2.preview.HorizontalLine
        android:id="@+id/tab_1"
        android:layout_width="50dp"
        android:layout_height="14dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.therxmv.telegramthemer.ui.v2.preview.HorizontalLine
        android:id="@+id/tab_1_unread"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tab_1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.therxmv.telegramthemer.ui.v2.preview.RoundedRect
        android:id="@+id/tab_1_selector"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@id/tab_1_unread"
        app:layout_constraintStart_toStartOf="@id/tab_1"
        app:layout_constraintTop_toBottomOf="@id/tab_1" />

    <com.therxmv.telegramthemer.ui.v2.preview.HorizontalLine
        android:id="@+id/tab_2"
        android:layout_width="50dp"
        android:layout_height="14dp"
        app:layout_constraintEnd_toStartOf="@+id/tab_3"
        app:layout_constraintStart_toEndOf="@+id/tab_1_unread"
        app:layout_constraintTop_toTopOf="parent" />

    <com.therxmv.telegramthemer.ui.v2.preview.HorizontalLine
        android:id="@+id/tab_3"
        android:layout_width="50dp"
        android:layout_height="14dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/tab_3_unread"
        app:layout_constraintTop_toTopOf="parent" />

    <com.therxmv.telegramthemer.ui.v2.preview.HorizontalLine
        android:id="@+id/tab_3_unread"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>