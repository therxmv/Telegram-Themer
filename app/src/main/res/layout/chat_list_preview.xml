<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.therxmv.telegramthemer.ui.v2.preview.BackgroundView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <com.therxmv.telegramthemer.ui.v2.preview.RoundedRect
            android:id="@+id/action_icon"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:rotation="45"
            app:layout_constraintBottom_toBottomOf="@+id/action_button"
            app:layout_constraintEnd_toEndOf="@+id/action_button"
            app:layout_constraintStart_toStartOf="@+id/action_button"
            app:layout_constraintTop_toTopOf="@+id/action_button" />

        <com.therxmv.telegramthemer.ui.v2.preview.RoundedRect
            android:id="@+id/action_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <include
            android:id="@+id/appbar"
            layout="@layout/chat_list_appbar" />

        <include
            android:id="@+id/tabs"
            layout="@layout/chat_list_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/appbar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>